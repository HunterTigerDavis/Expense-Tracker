<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settings_header">

        <EditTextPreference
            android:key="username"
            android:title="@string/edit_username"
            android:summary="@string/default_user"
            android:defaultValue="@string/default_user"/>
        <EditTextPreference
            android:key="password"
            android:title="@string/edit_password"
            android:summary="@string/default_pass"
            android:defaultValue="@string/default_pass"/>


    </PreferenceCategory>

    <PreferenceCategory app:title="@string/about_header">
        <Preference
            android:title="@string/about_title"
            android:summary="@string/summary_about"/>

        <Preference
            android:title="@string/title_version"
            android:summary="@string/app_version" />

        <Preference
            android:title="@string/help_title"
            android:summary="@string/help_info"/>

    </PreferenceCategory>

</PreferenceScreen>
